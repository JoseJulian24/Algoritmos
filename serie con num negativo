// serie con num negativo.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include "conio.h"
#include <iostream>

using namespace std;

int main()

{

int N,s,i;
s=0;
cout<< "introduzca N";
cin>> N;
while(N>0)
{  for(i=1;i<=N;i++)
       if(i%2!=0)
          s=s+i;
          cout<<"la suma es:" <<s;
   cout<< "\nintroduzca N";
   cin>> N;
}
getch();
return 0;

}
